{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="block">
        <h2 class="pb-30">Connexion</h2>
        <form action="{{ path('login') }}" method="post">      <div class="form-row">
                <label for="email">Email</label>
                <input type="text" id="email" autofocus name="_username" value="{{ username }}">
            </div>
            <div class="form-row">
                <label for="password">Mot de passe</label>
                <input type="password" id="password"  name="_password">
            </div>
            <div class="form-row">
                <label for="remember_me">
                    <input type="checkbox" id="remember_me" autofocus name="_remember_me">
                    Se souvenir de moi</label>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="d-flex flex-row-nowrap">
                <button class="btn btn-primary">
                    Connexion
                </button>
                <div class="d-flex flex-column ml-auto">
                    <small>
                        <a class="mr-10" href="{{ path('signup') }}">Vous n'avez pas encore de compte ?</a>
                    </small>

                    <small>
                        <a class="mr-10" href="{{ path('reset_password_request') }}">Vous avez oubli√© votre mot de passe ?</a>
                    </small>
                </div>
            </div>
            {%  if error %}
                <ul class="form-errors pb-20">
                    <li>{{ error.messageKey | trans(error.messagedata, 'security') }}</li>
                </ul>

            {%  endif %}


        </form>

    </div>
{% endblock %}
